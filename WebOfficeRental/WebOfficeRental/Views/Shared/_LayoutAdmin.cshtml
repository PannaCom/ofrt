    <![endif]-->
    <!-- jQuery -->
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/eModal.js"></script>
    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/Content/admin/vendor/metisMenu/metisMenu.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.0.min.js"></script>
    <script src="~/Scripts/jquery.ui.datepicker-vi-VN.js"></script>
</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/admin/dashboard">
                    <img src="~/Content/admin/img/admin_logo.png" style="height: 48px;" />
                </a>
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">
                <li class="dropdown">
                    @Html.Partial("_LoginPartial")
                </li>
            </ul>

            <!-- /.navbar-top-links -->
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">

                    <ul class="nav" id="side-menu">
                        <li>
                            <a href="/" target="_blank"><i class="fa icon-home fa-fw"></i> Trang chủ</a>
                        </li>
                        @if (User.IsInRole("Administrator"))
                        {
                            <li>
                                <a href="#"><i class="fa fa-shopping-bag fa-fw"></i> Cài đặt tài khoản <span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li><a href="/admin/hethong/themsieuthi">Cập nhật thông tin</a></li>
                                    <li><a href="/admin/hethong/dssieuthi">Thay đổi mật khẩu</a></li>
                                </ul>
                            </li>

                            <li>
                                <a href="#"><i class="fa fa-shopping-basket fa-fw"></i> Quản lý danh mục<span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li><a href="/admin/hethong/themgianhang">Thêm danh mục</a></li>
                                    <li><a href="/admin/hethong/dsgianhang">Danh sách danh mục</a></li>
                                </ul>
                            </li>

                            <li>
                                <a href="#"><i class="fa fa-shopping-cart fa-fw"></i> Quản lý phòng<span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li><a href="/admin/hethong/themmathang">Thêm phòng</a></li>
                                    <li><a href="/admin/hethong/dsmathang">Danh sách phòng</a></li>
                                </ul>
                            </li>

                            <li>
                                <a href="#"><i class="fa fa-bell-o fa-fw"></i> Quản lý menu<span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li><a href="/admin/hethong/themsukien">Thêm sự kiện</a></li>
                                    <li><a href="/admin/hethong/dssukien">Danh sách sự kiện</a></li>
                                </ul>
                            </li>

                            <li>
                                <a href="#"><i class="fa fa-bell-o fa-fw"></i> Quản lý địa điểm, quận huyện, tòa nhà<span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li><a href="/admin/hethong/themsukien">Thêm mới địa điểm</a></li>
                                    <li><a href="/admin/hethong/dssukien">Danh sách địa điểm</a></li>
                                    <li><a href="/admin/hethong/dssukien">Danh sách quận huyện</a></li>
                                    <li><a href="/admin/hethong/dssukien">Danh sách tòa nhà</a></li>
                                </ul>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-bell-o fa-fw"></i> Quản lý tin tức<span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li><a href="/admin/hethong/themsukien">Thêm danh mục tin tức</a></li>
                                    <li><a href="/admin/hethong/themsukien">Thêm mới tin tức</a></li>
                                    <li><a href="/admin/hethong/dssukien">Danh sách tin tức</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
