<!--Advance Search Wrap Start-->

<div class="container">
    <!--Heading Wrap Start-->
    <div class="kf_heading_1">
        <h3>Tìm kiếm</h3>
        <p>Tìm kiếm <a href="/van-phong/van-phong-cho-thue">văn phòng</a> bạn muốn trong 15000 tin đăng uy tín tại đây.</p>
        <span class="kf_property_line"></span>
    </div>
    <!--Heading Wrap End-->
    <!--Search Form Wrap Start-->
    <div class="kf_advacnce_search_form">

        <form id="search_office" action="/search/van-phong" method="get">
            <div class="row">
                <div class="col-md-9 col-sm-6">
                    <div class="kf_search_field">
                        <label>Tên văn phòng</label>
                        <input type="text" name="keyword" placeholder="Nhập từ khóa cần tìm">
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="kf_search_field">
                        <label>Địa điểm</label>
                        <select class="chosen-select" name="tinh">
                            <option value="">Địa điểm cho thuê</option>
                            <option value="Thái bình 1">Thái Bình</option>
                            <option value="Hà Nội">Hà Nội</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="kf_search_field">
                        <label>Quận/huyện/thành phố</label>
                        <select class="chosen-select">
                            <option>Chọn quận</option>
                            <option>Huyện Ba vì</option>
                            <option>Bắc Ninh</option>
                            <option>-Phú Thọ</option>
                            <option>-Lào Cai</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="kf_search_field">
                        <label>Mức giá</label>
                        <select class="chosen-select">
                            <option value="-1">Thỏa thuận</option>
                            @for (int i = 0; i <= 100; i += 5)
                            {
                                <option value="@string.Format("tu-{0}-{1}-trieu", i, i+5)">@string.Format("Từ {0} đến {1} triệu", i, i + 5)</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="kf_search_field">
                        <label>Tòa nhà</label>
                        <select class="chosen-select">
                            <option>Any</option>
                            <option>Commercial</option>
                            <option>-Office</option>
                            <option>-Shop</option>
                            <option>-Residential</option>
                        </select>
                    </div>
                </div>
                
                
                <div class="col-md-3 col-sm-6">
                    <div class="kf_search_field">
                        <input type="submit" value="Tìm văn phòng">
                    </div>
                </div>
            </div>
        </form>
    </div>
    <!--Search Form Wrap End-->
</div>

